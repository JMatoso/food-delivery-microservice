@if(User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="shopping" asp-action="cart">Shopping Basket</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="shopping" asp-action="orders">Orders</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-controller="account" asp-action="profile">Account</a>
        </li>
